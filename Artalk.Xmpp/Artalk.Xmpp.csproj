<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;net48;net5.0;net6.0</TargetFrameworks>
    <Authors>Arad ITC</Authors>
    <Company>Arad ITC</Company>
    <Description>A dotnet frame work 4.8, .net core 3.1 , .net 5 &amp; .net 6 library for communicating with an XMPP server</Description>
    <Copyright>Copyright Â© AradITC 2022</Copyright>
    <PackageProjectUrl>https://github.com/araditc/Artalk.Xmpp</PackageProjectUrl>
    <PackageIcon>arad-Logo.png</PackageIcon>
    <Version>1.0.5</Version>
    <AssemblyVersion>1.0.5</AssemblyVersion>
    <Product>Artalk.Xmpp</Product>
    <PackageId>Artalk.Xmpp</PackageId>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AssemblyName>Artalk.Xmpp</AssemblyName>
    <RootNamespace>Artalk.Xmpp</RootNamespace>
    <PackageReleaseNotes>Add XEP-0049</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Client\Examples.xml" />
    <None Remove="favicon.ico" />
    <None Include="arad-Logo.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Content Include="Client\Examples.xml" />
    <Content Include="favicon.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Drawing.Common" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Interop.UPNPLib">
      <HintPath>obj\Interop.UPNPLib.dll</HintPath>
    </Reference>    
  </ItemGroup>

</Project>
